(* Copied from tutorial  *)
Theorem less_add_1:
  ∀n. n < n + 1
Proof
  decide_tac
QED

(* Copied from tutorial *)
Theorem less_eq_mult:
∀n:num. n <= n * n
Proof
  Induct_on ‘n’
  >- decide_tac
  >- (asm_simp_tac bool_ss [MULT]
    >> decide_tac)
QED

